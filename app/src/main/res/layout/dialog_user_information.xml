<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.fragments.DialogUserInformation"
    android:padding="15dp"
    android:layout_margin="15dp"
    app:cornerRadius="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/passion_one"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/persian_indigo"
        android:text="Update Profile Details"/>

    <EditText
        android:id="@+id/edt_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:fontFamily="@font/rubik"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edt_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:fontFamily="@font/rubik"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/btn_save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:backgroundTint="@color/bg_button"
        android:text="Save User Information"/>

</LinearLayout>